{
    "manifest_version": 3,
    "name": "Synthesize GPT",
    "version": "2.0",
    "author": "Hadesker.Net",
    "description": "Download audio from chatgpt. Dev by hadesker.net",
    "icons": {
        "48": "images/icon.png"
    },
    "background": {
        "service_worker": "scripts/background.js"
    },
    "action": {
        "default_icon": {
            "128": "images/icon.png"
        },
        "default_title": "Synthesize GPT",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["https://chatgpt.com/*","https://chat.openai.com/*"],
            "js": ["scripts/content.js"],
            "run_at": "document_idle"
        }
    ],
    "permissions": [
        "activeTab"
    ],
    "web_accessible_resources": [{
        "resources": ["scripts/inject.js"],
        "matches": ["https://chatgpt.com/*","https://chat.openai.com/*"]
    }]
}
