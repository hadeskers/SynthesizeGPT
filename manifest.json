{
    "manifest_version": 3,
    "name": "Synthesize ChatGPT",
    "version": "2.2",
    "author": "Hadesker.Net",
    "description": "Enables to effortlessly download audio files generated by ChatGPT directly to your computer. Dev by hadesker.net",
    "icons": {
        "128": "src/icons/128.png"
    },
    "background": {
        "service_worker": "src/scripts/background.js"
    },
    "action": {
        "default_icon": {
            "128": "src/icons/128.png"
        },
        "default_title": "Synthesize ChatGPT",
        "default_popup": "src/popup.html"
    },
    "content_scripts": [
        {
            "matches": ["https://chatgpt.com/*","https://chat.openai.com/*"],
            "js": ["src/scripts/content.js"],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [{
        "resources": ["src/scripts/inject.js"],
        "matches": ["https://chatgpt.com/*","https://chat.openai.com/*"]
    }]
}
